// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model ScheduleItem {
  id         String   @id
  category   String
  courseName String
  courseCode String?
  dayOfWeek  String // "Po", "Ut", "St", "Å t", "Pi"
  startTime  String
  endTime    String
  room       String
  teacher    String
  note       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([dayOfWeek])
  @@index([courseName])
  @@index([teacher])
}
